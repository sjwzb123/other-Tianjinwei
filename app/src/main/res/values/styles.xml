<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabView">@style/MyTabView</item>
    </style>
    <style name="MyTabView" parent="TabView">
        <item name="iconWidth">20dp</item>
        <item name="iconHeight">20dp</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
    </style>

    <!-- 第一步设置主题 -->
    <style name="StyledIndicators" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="tabView">@style/MyTabView</item>
    </style>
    <!-- 第二步设置主题 -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">

        <!-- 点击时在不同状态下显示的背景色 -->
        <item name="android:background">@color/color_00000000</item>
        <!-- 分割线图片设置 -->
        <!--<item name="android:divider">@color/colorPrimaryDark</item>-->
        <!-- 设置分割线的显示位置，或是不显示 -->
        <item name="android:showDividers">none</item>

        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>
    <!-- 第三步设置主题 -->
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
</resources>
